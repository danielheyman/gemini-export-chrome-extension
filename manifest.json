{
  "manifest_version": 3,
  "name": "Gemini Chat Exporter (OpenClaw)",
  "version": "1.0.0",
  "description": "Export all Gemini chats to JSON/Markdown",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["jszip.min.js", "injected.js"],
      "matches": ["https://gemini.google.com/*"]
    }
  ]
}
